use_frameworks!

def shared_pods
	pod 'CoreDataStackManager'
end

target 'Smash' do
	platform :ios, '12.0'
	shared_pods
end

target 'SmashKit' do
	platform :ios, '12.0'
	shared_pods
	pod 'SwiftSoup'
end

target 'SmashWatch Extension' do
	platform :watchos, '5.0'
	shared_pods
end

target 'SmashKitWatch' do
	platform :watchos, '5.0'
	shared_pods
end
